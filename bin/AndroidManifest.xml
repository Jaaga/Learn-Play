<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jaaga.learnnplay"
    android:versionCode="5"
    android:versionName="1.2" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="20" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" >
        <activity
            android:name="com.jaaga.learnnplay.MainActivity"
            android:label="@string/app_name" android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.jaaga.learnnplay.Learn_alphabets"
            android:label="@string/title_activity_learn_alphabets" android:screenOrientation="landscape">
        </activity>
        <activity
            android:name="com.jaaga.learnnplay.Learn_Levels"
            android:label="@string/title_activity_learn_levels" android:screenOrientation="landscape">
        </activity>
        <activity
            android:name="com.jaaga.learnnplay.Quiz_Levels"
            android:label="@string/title_activity_quiz_levels" android:screenOrientation="landscape">
        </activity>
        <activity
            android:name="com.jaaga.learnnplay.Learn_numbers"
            android:label="@string/title_activity_learn_numbers" android:screenOrientation="landscape">
        </activity>
        <activity
            android:name="com.jaaga.learnnplay.PaintMe"
            android:label="@string/title_activity_paint_me" android:screenOrientation="landscape">
        </activity>
        <activity
            android:name="com.jaaga.learnnplay.Quiz_alphabets"
            android:label="@string/title_activity_quiz_alphabets"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.jaaga.learnnplay.Learn_Fruits"
            android:label="@string/title_activity_learn__fruits" android:screenOrientation="landscape">
        </activity>
        <activity
            android:name="com.jaaga.learnnplay.Quiz_fruits"
            android:label="@string/title_activity_quiz_fruits" android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>
