<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".Quiz_alphabets" >

    <ImageButton
        android:id="@+id/option4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/option2"
        android:layout_alignTop="@+id/option3"
        android:scaleType="fitXY"/>

    <ImageButton
        android:id="@+id/resume"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />

    <ImageButton
        android:id="@+id/option2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/option1"
        android:layout_marginLeft="52dp"
        android:layout_toRightOf="@+id/resume"
        android:scaleType="fitXY" />

    <ImageButton
        android:id="@+id/option3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/option1"
        android:layout_marginRight="18dp"
        android:layout_marginTop="30dp"
        android:layout_toLeftOf="@+id/resume"
        android:scaleType="fitXY" />

    <ImageButton
        android:id="@+id/option1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/option3"
        android:layout_below="@+id/resume"
        android:layout_marginTop="50dp"
        android:scaleType="fitXY" />

</RelativeLayout>
